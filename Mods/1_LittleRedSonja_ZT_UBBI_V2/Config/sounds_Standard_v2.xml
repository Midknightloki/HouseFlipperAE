<LittleRedSonja>

	<append xpath="/Sounds">
		
		<SoundDataNode name="silentNoiseElectronics"> <AudioSource name="@:Sounds/Prefabs/AudioSource_UseAction.prefab"/>
			<Noise ID="3" noise="30" time="14" muffled_when_crouched="0.65" heat_map_strength="0.05" heat_map_time="60"/>
			<AudioClip ClipName="#@modfolder:Resources/SonjaUBBI.unity3d?ZTSoundSilentTrigger" Loop="false"/>
			<LocalCrouchVolumeScale value="0.5"/><CrouchNoiseScale value="1"/><NoiseScale name="1"/><MaxVoices value="10"/><MaxRepeatRate value="0.01"/>			
		</SoundDataNode>
		
		<SoundDataNode name="arcadeSilentNoise"> <AudioSource name="@:Sounds/Prefabs/AudioSource_UseAction.prefab"/>
