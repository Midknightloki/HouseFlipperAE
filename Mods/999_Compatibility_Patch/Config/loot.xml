<!-- Compatibility patch to restore missing vanilla loot containers -->
<configs>
	<append xpath="/lootcontainers">
		<!-- Restore birdNest loot container (missing from modded loot tables) -->
		<lootcontainer id="birdNest" count="1" size="4,4" destroy_on_close="true" sound_open="UseActions/open_birdnest" sound_close="UseActions/close_birdnest" open_time="1.5" loot_quality_template="qualBaseTemplate">
			<item name="resourceFeather" count="1,4" prob="1"/>
			<item name="foodEgg" count="1,3" prob="0.7"/>
			<item name="resourceYuccaFibers" count="1,5" prob="0.3"/>
		</lootcontainer>
		
		<!-- Restore junk loot container (also reported as missing) -->
		<lootcontainer id="junk" count="1" size="4,4" sound_open="Misc/crate_open" sound_close="Misc/crate_close" open_time="1">
			<item name="resourceScrapPolymers" count="1,3" prob="0.4"/>
			<item name="resourcePaper" count="1,5" prob="0.3"/>
			<item name="resourceCloth" count="1,3" prob="0.3"/>
			<item name="drinkJarEmpty" count="1,2" prob="0.2"/>
		</lootcontainer>
	</append>
</configs>
